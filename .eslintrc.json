{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "prettier", "plugin:node/recommended"],
  "plugins": ["prettier"],
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly",
    "__": true,
    "__n": true,
    "setLocale": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prettier/prettier": "warn",
    "no-console": "off",
    "no-continue": "off",
    "class-methods-use-this": "off",
    "node/no-extraneous-require": [
      "error",
      {
        "allowModules": ["bluebird"]
      }
    ],
    "import/no-extraneous-dependencies": "off",
    "no-restricted-syntax": "off",
    "camelcase": "off",
    "strict": "off",
    "padded-blocks": "off"
  }
}
